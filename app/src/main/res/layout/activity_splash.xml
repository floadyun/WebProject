<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_launch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">
    <ImageView
        android:id="@+id/app_splash_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/app_splash"/>
    <com.base.lib.autolayout.AutoRelativeLayout
        android:id="@+id/splash_goto_view"
        android:layout_width="100px"
        android:layout_height="50px"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40px"
        android:layout_marginRight="20px"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_bg_fillet"
            android:alpha="0.2"/>
        <TextView
            android:id="@+id/splash_progress_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="5s 跳过"
            android:gravity="center"
            android:textSize="@dimen/normal_text_size" />
    </com.base.lib.autolayout.AutoRelativeLayout>
</RelativeLayout>
