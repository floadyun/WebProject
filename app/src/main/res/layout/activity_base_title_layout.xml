<?xml version="1.0" encoding="utf-8"?>
<com.base.lib.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.base.lib.autolayout.AutoRelativeLayout
        android:id="@+id/base_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:background="@color/title_color">
        <com.base.lib.autolayout.AutoRelativeLayout
            android:id="@+id/base_back_layout"
            android:layout_width="70px"
            android:layout_height="match_parent">
            <View
                android:layout_width="40px"
                android:layout_height="40px"
                app:layout_auto_baseheight="width"
                android:layout_centerInParent="true"
                android:background="@drawable/nav_icon_fanhui" />
        </com.base.lib.autolayout.AutoRelativeLayout>
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:lines="1"
            android:maxLength="15"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />
        <com.base.lib.autolayout.AutoLinearLayout
            android:id="@+id/title_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_margin_space"
            android:gravity="right|center_vertical">
            <ImageView
                android:id="@+id/tool_bar_right_img"
                android:layout_width="35px"
                android:layout_height="35px"
                android:background="@null"
                android:visibility="gone"
                app:layout_auto_baseheight="width"/>
            <TextView
                android:id="@+id/tool_bar_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="чбошод"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size"
                android:layout_marginLeft="10px"
                android:visibility="gone" />
        </com.base.lib.autolayout.AutoLinearLayout>
    </com.base.lib.autolayout.AutoRelativeLayout>
</com.base.lib.autolayout.AutoRelativeLayout>