<?xml version="1.0" encoding="utf-8"?>
<com.base.lib.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/tab_item_iv"
        android:layout_width="38px"
        android:layout_height="38px"
        android:scaleType="fitXY"
        app:layout_auto_baseheight="width"/>
    <TextView
        android:id="@+id/tab_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size_20"
        android:layout_gravity="center"
        android:layout_marginTop="5px"
        android:text="首页"/>
</com.base.lib.autolayout.AutoLinearLayout>